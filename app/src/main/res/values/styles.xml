<resources>

    <style name="Widget.Theme.Video.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Video.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


    <style name="Theme_Dialog" parent="android:Theme.Material.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">9dp</item>
    </style>

    <style parent="ThemeOverlay.AppCompat.Dialog.Alert" name="TrackSelectionDialogThemeOverlay">
        <item name="windowNoTitle">false</item>
    </style>


    <style name="BottomSheetCustom" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyle</item>
    </style>
    <style name="bottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/delete_dialog_bg</item>
        <item name="android:layout_margin">16dp</item>
    </style>


    <style name="BottomSheetSpeed" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetSpeed</item>
    </style>

    <style name="bottomSheetSpeed" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_margin">16dp</item>
    </style>


    <!--    SPlashScreen-->
    <style name="SplashScreen" parent="Theme.Video">
        <item name="android:windowBackground">@drawable/splash_screen_bg</item>
        <item name="android:statusBarColor">@color/statusBar</item>
    </style>

</resources>