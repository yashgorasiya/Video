<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/nightDialogParent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/delete_dialog_bg"
        android:backgroundTint="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/night_intensity"
            android:fontFamily="@font/not_sans"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingStart="28dp"
            android:paddingTop="20dp"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp" />

        <SeekBar
            android:id="@+id/nightSeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="32dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:thumbTint="@color/white"
            android:progressTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

        <ImageView
            android:id="@+id/doneImgNDialog"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_done_24"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:background="@drawable/player_buttons_bg"
            android:backgroundTint="@color/PrimaryLight"
            android:padding="12dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="8dp"
            app:tint="@color/white"
            android:contentDescription="@string/okbutton" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>