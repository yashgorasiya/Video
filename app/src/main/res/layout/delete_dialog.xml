<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/delete_dialog_bg">

        <TextView
            android:id="@+id/DeleteDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:textColor="@color/homePreviewMore"
            android:fontFamily="@font/not_sans"
            />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/thumbnailDelete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/preview_thumbnail_bg"
                android:scaleType="centerCrop"
                android:contentDescription="@string/deleteDialogThumb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/duration_size_bg"
                    tools:ignore="UselessParent">
                <TextView
                    android:id="@+id/sizeDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/not_sans"
                    android:paddingStart="5dp"
                    android:paddingEnd="4dp"
                    android:text="@string/dummyVideoSize50mb"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <SeekBar
                android:id="@+id/home_preview_seekbar"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="bottom"
                android:padding="0dp"
                android:progressDrawable="@drawable/home_preview_seekbar_process"
                android:thumb="@color/black" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:textSize="14sp"
            android:fontFamily="@font/not_sans"
            android:textColor="@color/homePreviewMore"
            android:text="@string/deleteWaringMassage"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="end">

            <TextView
                android:id="@+id/DialogDeleteCancelTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingEnd="12dp"
                android:paddingStart="8dp"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                />

            <Button
                android:id="@+id/DialogDeleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@android:color/holo_red_dark"
                android:backgroundTint="@android:color/holo_red_light"
                android:text="@string/delete" />

        </LinearLayout>

</LinearLayout>